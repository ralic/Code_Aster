def DEFIC_prod(self,ACTION,UNITE,**args):
  if ACTION == "ASSOCIER" :
    if UNITE != None :
      return
    else :
      return entier
  elif ACTION == "LIBERER"  :
    return
  else :
    raise AsException("ACTION non prevue")

